{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe arquivo de build ativo",
            "command": "c:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Aqui você inclui os caminhos para os diretórios que contém os cabeçalhos das funções
                //"-I${workspaceFolder}/../Dependencies/GLAD/include", //GLAD
                "-I${workspaceFolder}/../Dependencies/GLEW/include", //GLEW
                "-I${workspaceFolder}/../Dependencies/GLFW/include", //GLFW
                "-I${workspaceFolder}/../Dependencies/glm", //GLM
                "-I${workspaceFolder}/../Dependencies/stb_image", //STB_IMAGE
                "${file}",
                // Aqui você inclui o caminho para os outros arquivos .c ou .cpp    // bibliotecas opensource?
                //"${workspaceFolder}/../Dependencies/GLAD/src/glad.c",  //GLAD
                "${workspaceFolder}/../Dependencies/stb_image/stb_image.cpp", //STB_IMAGE
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                // Aqui você inclui o caminho para os diretórios que possuem as bibliotecas estáticas e o nome das biblioteca estáticas (.lib ou .a), com -l na frente
                "-L${workspaceFolder}/../Dependencies/GLEW/lib/x64",
                "-lglew32",               
                "-L${workspaceFolder}/../Dependencies/GLFW/lib-mingw-w64",
                "-lglfw3dll",
                "-Wno-pragmas"
            ],
            "options": {
                "cwd": "c:\\msys64\\ucrt64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarefa gerada pelo Depurador."
        }
    ],
    "version": "2.0.0"
